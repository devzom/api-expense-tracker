{
  "name": "expense-tracker-api",
  "version": "1.0.0",
  "description": "Expense Tracking API built with Hono",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts",
    "lint": "eslint src/**/*.ts",
    "migrate": "prisma generate && prisma migrate dev",
    "test": "vitest",
    "seed": "ts-node prisma/seed.ts"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [
    "expense",
    "tracking",
    "api",
    "hono"
  ],
  "author": "devzom",
  "license": "ISC",
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@prisma/client": "^6.2.1",
    "@prisma/extension-accelerate": "^1.2.1",
    "hono": "^4.6.17",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "eslint": "9.18.0",
    "prisma": "^6.2.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.2"
  }
}
