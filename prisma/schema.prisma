datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Expense {
  id          String   @id @default(uuid())
  amount      Float
  description String
  category    String
  date        DateTime @default(now())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}

model User {
  id       String    @id @default(uuid())
  email    String    @unique
  name     String?
  expenses Expense[]
}
