{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "@/*": ["./src/*"],
      "@schema": ["./src/schemas/*"],
      "@modules": ["./src/modules/*"],
      "@utils": ["./src/utils/*"],
      "@constans": ["./src/constans/*"],
      "@middlewares": ["./src/middlewares/*"],
      "@routes": ["./src/routes/*"],
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
